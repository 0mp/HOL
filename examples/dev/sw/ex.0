open ANF;

val def1 = Define `f1 x = x + 1`;
val def2 = Define `f2 x = x + x + 1`;
val def3 = Define `f3 x = x + (x + 1)`;
val def4 = Define `f4 (x,y) = (f3 x + f2 y, 12)`;
val def5 = Define `f5 (x,y) = if x < y then f2 3 else x+y`;
val def6 = Define `f6 (x,a) = if x=0 then a else f6(x-1,x*a)`;
val def7 = Define `f7 x = f6(x)+1`;

val th1 = toANF [] def1;
val th2 = toANF [] def2;
val th3 = toANF [] def3;
val th4 = toANF [] def4;
val th5 = toANF [] def5;
val th6 = toANF [] def6;
val th7 = toANF [] def7;
