(*---------------------------------------------------------------------------*)
(* Interactive access to the compiler                                        *)
(*---------------------------------------------------------------------------*)

app load ["Link", "ANF", "word32Lib", "pairTheory", "pairLib", "arithmeticTheory", "listTheory", "optionTheory", "word32Theory", "finite_mapTheory", 
      "preARMSyntax", "preARMTheory", "ARMCompositionTheory", "ILTheory","annotatedIL"];

quietdec := true;
open Portable Link Assem preARMSyntax preARMTheory word32Theory ANF
     pairTheory pairLib listTheory arithmeticTheory word32Lib PairedLambda ILTheory annotatedIL;
quietdec := false;

(*---------------------------------------------------------------------------*)
(* Old-style conditional statements                                          *)
(*---------------------------------------------------------------------------*)

val _ = add_rule{term_name   = "COND",
fixity      = Infix (HOLgrammars.RIGHT, 3),
pp_elements = [HardSpace 1, TOK "=>", BreakSpace(1,0), TM, BreakSpace(1,0), TOK "|", HardSpace 1],
paren_style = OnlyIfNecessary,
block_style = (AroundEachPhrase, (INCONSISTENT, 0))};

