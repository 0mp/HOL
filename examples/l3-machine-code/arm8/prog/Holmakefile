DEPS = $(patsubst %,%.uo,$(BARE_THYS))

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ${HOLDIR}/examples/l3-machine-code/base/base-heap -o $(HOLHEAP) $(BARE_THYS)

endif
