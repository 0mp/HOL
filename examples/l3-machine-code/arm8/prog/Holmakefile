INCLUDES = $(HOLDIR)/examples/machine-code/hoare-triple ../step ../../common
OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = arm8-step-heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

