OPTIONS=QUIT_ON_FAILURE

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))
all: $(TARGETS)
.PHONY: all

ifeq ($(KERNELID),-otknl)
ARTFILES = $(patsubst %Script.sml,%.ot.art,$(wildcard *Script.sml))
all: $(ARTFILES)

hol4-machine-code-hoare-triple-unint.art: hol4-machine-code-hoare-triple-unint.thy $(ARTFILES)
	opentheory info --article -o $@ $<

hol4-machine-code-hoare-triple.art: hol4-machine-code-hoare-triple.thy hol4-machine-code-hoare-triple-unint.art
	opentheory info --article -o $@ $<
endif
