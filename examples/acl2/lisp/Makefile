CERTS := $(patsubst %.lisp, %.cert, $(wildcard *.lisp))

.PHONY: top
top: $(CERTS)

top-after-check:
	@$(MAKE) -q ; if [ $$? != 0 ] ; then $(MAKE) top ; else echo "Nothing to make in `pwd`/." ; fi

include $(ACL2_SYSTEM_BOOKS)/Makefile-generic

# Add to the following if there are other books to certify.
BOOKS = pprint-file a2ml filter-forms pprint-axioms book-essence

.PHONY: clean+ clean
clean+: clean
	-rm -f defaxioms.lisp.trans

