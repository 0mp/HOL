.PHONY: all test1 test2 test3 test4 test5 test6

all: test1 test2 test3 test4 test5 test6

TEST1 = $(wildcard t1*)
TEST2 = $(wildcard t2*)
TEST3 = $(wildcard t3/t3*)
TEST4 = $(wildcard t3/t3[234]*)
TEST5 = $(wildcard */)
TEST6 = $(wildcard t1*/)

test1:
	[ "$(TEST1)" = "t1a t1b" ]

test2:
	[ "$(TEST2)" = "" ]

test3:
	[ "$(TEST3)" = "t3/t31 t3/t32" ]

test4:
	[ "$(TEST4)" = "t3/t32" ]

test5:
	[ "$(TEST5)" = "t3/ t4/" ]

test6:
	[ "$(TEST6)a" = "a" ]
